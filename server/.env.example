# Server
PORT=3000
NODE_ENV=production

# Database (Postgres)
DATABASE_URL=postgres://user:password@localhost:5432/scalpeldb

# JWT
JWT_SECRET=replace_with_strong_random_secret
JWT_EXPIRES=7d

# Cookie settings
COOKIE_SECURE=true   # set to true in production (requires HTTPS)
COOKIE_SAMESITE=Strict

# CSRF (no secret needed for double-submit cookie approach)

# Razorpay
RAZORPAY_WEBHOOK_SECRET=replace_with_razorpay_webhook_secret

# Upload limits
MAX_FILE_SIZE_BYTES=10485760   # 10 MB per file
MAX_FILES_PER_UPLOAD=50

# Misc
TMP_DIR=/tmp/scalpel
